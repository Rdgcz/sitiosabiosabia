rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regra para arquivos privados (somente dono)
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para arquivos p√∫blicos (todos autenticados podem ler)
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == "y27U51fFUWSLnr5tdD88D4XdaL52";
    }
  }
}